@model AirsoftGroup.Models.Stats

<h4>Stats</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerName" class="control-label"></label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Win" class="control-label"></label>
                <input asp-for="Win" class="form-control" />
                <span asp-validation-for="Win" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Defeat" class="control-label"></label>
                <input asp-for="Defeat" class="form-control" />
                <span asp-validation-for="Defeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accuracy" class="control-label"></label>
                <input asp-for="Accuracy" class="form-control" />
                <span asp-validation-for="Accuracy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeadshotPercentage" class="control-label"></label>
                <input asp-for="HeadshotPercentage" class="form-control" />
                <span asp-validation-for="HeadshotPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FavouriteWeapon" class="control-label"></label>
                <input asp-for="FavouriteWeapon" class="form-control" />
                <span asp-validation-for="FavouriteWeapon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

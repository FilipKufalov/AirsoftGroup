@using AirsoftGroup.Models.Entity
@model Chat

<hr />
<div class="col">
        <form asp-action="Submit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="user" value=@User.Identity.Name class="form-control" hidden/>
                <span asp-validation-for="user" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: flex">
                <input asp-for="message" class="form-control w-100" placeholder="send message"/>
                <span asp-validation-for="message" class="text-danger"></span>
                <input type="submit" value="Send" class="btn btn-primary" />
                @*<i class="bi bi-send"></i>*@
            </div>
            <div class="form-group">
            </div>
        </form>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
